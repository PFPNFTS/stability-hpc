#%Module1.0#####################################################################
##
## modules cuda/11.7
##
## modulefiles/cuda/11.7. Written by Quentin Anthony
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "cuda/11.7 - Sets the environment for CUDA 11.7"
}

module-whatis   "Sets the environment for using CUDA 11.7 (including NCCL builds)"

# for Tcl script use only
set     version         11.7
set     prefix          /usr/share/Modules
set     exec_prefix     /usr/share/Modules
set     datarootdir     ${prefix}/share

# CUDA paths
prepend-path    PATH                /usr/local/cuda-11.7/bin
prepend-path    CPATH               /usr/local/cuda-11.7/include
prepend-path    MANPATH             /usr/local/cuda-11.7/share/man
prepend-path    LD_LIBRARY_PATH     /usr/local/cuda-11.7/lib64
prepend-path    LIBRARY_PATH        /usr/local/cuda-11.7/lib64
prepend-path    CUDA_HOME           /usr/local/cuda-11.7

# NCCL paths
prepend-path    CPATH               /opt/nccl-cuda11.7/build/include
prepend-path    LD_LIBRARY_PATH     /opt/nccl-cuda11.7/build/lib
prepend-path    LIBRARY_PATH        /opt/nccl-cuda11.7/build/lib
prepend-path    NCCL_HOME           /opt/nccl-cuda11.7/build

# AWS-OFI-NCCL paths
prepend-path    LD_LIBRARY_PATH     /opt/aws-ofi-nccl-cuda11.7/lib
prepend-path    LIBRARY_PATH        /opt/aws-ofi-nccl-cuda11.7/lib
prepend-path    AWS_OFI_NCCL_HOME   /opt/aws-ofi-nccl-cuda11.7

# nccl-tests paths
prepend-path    PATH               /opt/nccl-tests-cuda11.7/build

#module         use
